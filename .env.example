# .env.example
OWNER=
DATA_DIR=./data
PORT=8888
LOG_LEVEL=silent

# --- CONTROL FLAG FOR SSL DELEGATION ---
# Set to 'true' if Traefik on EC2 should handle SSL (open ports 80, 443 on EC2).
# Set to 'false' if a 3rd party (like Cloudflare/RepoCloud.io) handles SSL (open only port 80 on EC2).
TRAEFIK_ENABLED=false # Default to Traefik handling SSL
# Your email for Let's Encrypt notifications (or empty for dev)
LE_EMAIL=
# For Traefik and your app's host rule  (or empty for dev)
SERVER_DOMAIN= # e.g., myapp.com or dev.myapp.com
